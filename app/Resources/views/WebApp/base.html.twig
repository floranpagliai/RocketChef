<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Gastro{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <script src="{{ asset('js/pace.min.js') }}"></script>
    <link href="http://fonts.googleapis.com/css?family=Ubuntu:300,400,500,700,300italic,400italic,500italic,700italic" rel="stylesheet" type="text/css"/>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel="stylesheet" type="text/css">
    {% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}

    {% stylesheets
    'css/bootstrap.css'
    'css/font-awesome.css'
    '%kernel.root_dir%/Resources/css/style.css'
    '%kernel.root_dir%/Resources/css/tile.css'
    '%kernel.root_dir%/Resources/css/circle-tile.css'
    '%kernel.root_dir%/Resources/css/color-helper.css'
    '%kernel.root_dir%/Resources/css/portlet.css'
    '%kernel.root_dir%/Resources/css/pace-flash.css'
    '%kernel.root_dir%/Resources/css/dataTables.css'
    '%kernel.root_dir%/Resources/css/easy-piechart.css'
    filter='cssrewrite'%}
    <link href="{{ asset_url }}" rel="stylesheet" media="screen"/>
    {% endstylesheets %}
</head>
<body>
{% set word_dashboard = 'Dashboard'|trans %}
{% set word_recipeBook = 'Recipe Book'|trans %}
{% block body %}
    <div id="wrapper"><!-- Wrapper -->

        <div id="sidebar-wrapper"><!-- Sidebar -->
            <ul class="sidebar-nav">
                {% block sidebar %}
                    <li class="sidebar-brand">
                        <a href="#">Gastro</a>
                    </li>
                    <li class="side-user hidden-xs">
                        <p class="welcome">
                            <i class="fa fa-key"></i> Logged in as
                        </p>
                        <p class="name tooltip-sidebar-logout">
                            Floran <span class="last-name">Pagliai</span>
                            <a style="color: inherit" class="logout_open" href="{{ path('fos_user_security_logout') }}" data-toggle="tooltip" data-placement="top" title="Logout"><i class="fa fa-sign-out"></i></a>
                        </p>
                        <div class="clearfix"></div>
                    </li>
                    <li class="sidebar-btn">
                        <a class="active" href="{{ path('gastro_dashboard') }}"><i class="fa fa-tachometer "></i> {{ word_dashboard }}</a>
                    </li>
                    <li class="sidebar-btn">
                        <a href="{{ path('gastro_recipe_book') }}"><i class="fa fa-book "></i> {{ word_recipeBook }}</a>
                    </li>
                {% endblock %}
            </ul>
        </div>
        <!-- End Sidebar -->


        <div id="page-content-wrapper"><!-- Page-content_wrapper -->
            <div class="content-header"><!-- Page content header -->
                <h1>
                    <button id="menu-toggle" href="#" class="btn"><i class="fa fa-bars"></i></button>
                    {% block page_content_header %}
                        Simple Sidebar
                    {% endblock %}
                </h1>
            </div>

                <div class="row-fluid">
                    <ol class="breadcrumb">
                        {% block page_content_breadcrumb %}
                            <li class="active"><i class="fa fa-tachometer "></i> Dashboard</li>
                        {% endblock %}
                    </ol>
                </div>


            <div class="page-content"><!-- Page content -->
                {% block page_widgets %}
                        {% if widgets is defined %}
                            <div class="row-fluid">
                            {% for widget in widgets %}
                                {{ render(controller("WidgetBundle:Widget:generate",
                                {'link': widget.link,
                                'name' : widget.name,
                                'value' : widget.value,
                                'color' : widget.color,
                                'textcolor' : widget.textcolor,
                                'icon' : widget.icon} )) }}
                            {% endfor %}
                            </div>
                        {% endif %}
                {% endblock %}

                <div class="row-fluid">
                    {% include 'BraincraftedBootstrapBundle::flash.html.twig' with { 'close': true } %}
                    {% block page_content %}
                    {% endblock %}
                </div>
            </div>

        </div>
        <!-- End Page-content_wrapper -->

    </div><!-- End Wrapper -->
{% endblock %}

<!-- jQuery (necessary for Bootstraps JavaScript plugins) -->
<script src="{{ asset('js/jquery.js') }}"></script>
<!-- Include all JavaScripts, compiled by Assetic -->
<script src="{{ asset('js/bootstrap.js') }}"></script>
<script src="{{ asset('js/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('js/jquery.easypiechart.min.js') }}"></script>

<script type="text/javascript">
    $(document).ready(function () {
        {% block document_ready %}{% endblock %}
    });
    $("#menu-toggle").click(function (e) {
        e.preventDefault();
        $("#wrapper").toggleClass("active");
    });

    //Portlet Icon Toggle
    $(".portlet-widgets .fa-chevron-down, .portlet-widgets .fa-chevron-up").click(function() {
        $(this).toggleClass("fa-chevron-down fa-chevron-up");
    });
    $(document).ready(function () {
        $('#dataTable').dataTable({
            "paging": false,
            "info": false
        });
    });
    $(function() {
        $('#easy-pie-1, #easy-pie-2, #easy-pie-3, #easy-pie-4').easyPieChart({
            barColor: "rgba(255,255,255,.5)",
            trackColor: "rgba(255,255,255,.5)",
            scaleColor: "rgba(255,255,255,.5)",
            lineWidth: 20,
            animate: 1500,
            size: 180,
            onStep: function(from, to, percent) {
                $(this.el).find('.percent').text(Math.round(percent));
            }
        });

    });
    $(function() {

        // Tooltips for sidebar toggle and sidebar logout button
        $('.tooltip-sidebar-toggle, .tooltip-sidebar-logout').tooltip({
            selector: "[data-toggle=tooltip]",
            container: "body"
        })

    })
</script>
</body>
</html>
