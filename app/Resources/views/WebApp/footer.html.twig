<script>
$(function () {
    // Tooltips for sidebar toggle and sidebar logout button
    $('.tooltip-sidebar-toggle, .tooltips').tooltip({
        selector: "[data-toggle=tooltip]",
        container: "body"
    });
});

$(function () {
    $('.easy-pie-chart').easyPieChart({
        barColor: "rgba(255,255,255,.5)",
        trackColor: "rgba(255,255,255,.5)",
        scaleColor: "rgba(255,255,255,.5)",
        lineWidth: 20,
        animate: 1,
        size: 180,
        onStep: function(from, to, percent) {
            $(this.el).find('.percent').text(Math.round(percent));
        }
    });
});

$("#menu-toggle").click(function (e) {
    e.preventDefault();
    $("#wrapper").toggleClass("active");
});

//Portlet Icon Toggle
$(".portlet-widgets .fa-chevron-down, .portlet-widgets .fa-chevron-up").click(function() {
    $(this).toggleClass("fa-chevron-down fa-chevron-up");
});

$(document).ready(function () {
    var aoColums = [];
    $('#dataTable').find('thead th').each( function () {
        if ( $(this).hasClass( 'no_sort' )) {
            aoColums.push( { "bSortable": false } );
        } else {
            aoColums.push( null );
        }
    });
    $('#dataTable').dataTable({
        "paging": false,
        "info": false,
        "aoColumns": aoColums
    });
});
//Morris Area Chart
var sales_data = [
    {date: '2014-1-25', productA: 450.26, productB: 112.26},
    {date: '2014-1-26', productA: 600.34, productB: 200.62},
    {date: '2014-1-27', productA: 645.91, productB: 224.26},
    {date: '2014-1-28', productA: 442.23, productB: 109.94},
    {date: '2014-1-29', productA: 569.26, productB: 198.98},
    {date: '2014-1-30', productA: 602.53, productB: 201.26},
    {date: '2014-1-31', productA: 680.26, productB: 243.87}
];
Morris.Area({
    element: 'morris-chart-area',
    data: sales_data,
    xkey: 'date',
    xLabelFormat: function(date) {
        return (date.getMonth()+1)+'/'+date.getDate()+'/'+date.getFullYear();
    },
    xLabels: 'day',
    ykeys: ['productA', 'productB'],
    yLabelFormat: function (y) { return y +" €" ;},
    labels: ['Chiffre d\'affaire', 'Coûts'],
    lineColors: ['#e74c3c', '#2980b9'],
    hideHover: 'auto',
    resize: true,
    gridTextFamily: ['Open Sans'],
    dateFormat: function(date) {
        d = new Date(date);
        return d.getDate()+'/'+(d.getMonth()+1)+'/'+d.getFullYear();
    }
});
</script>
