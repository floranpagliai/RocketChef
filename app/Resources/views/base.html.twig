<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    {% block stylesheets %}
        {% stylesheets
        '%kernel.root_dir%/../vendor/twitter/bootstrap/less/bootstrap.less'
        '%kernel.root_dir%/../vendor/twitter/bootstrap/less/responsive.less'
        'bundles/gastroutilstwig/css/bootstrap.css'
        filter='lessphp,cssrewrite' %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
        {% endstylesheets %}
    {% endblock %}
</head>
<body>
{% block body %}
    <div id="wrapper"><!-- Wrapper -->

        <div id="sidebar-wrapper"><!-- Sidebar -->
            <ul class="sidebar-nav">
                {% block sidebar %}
                    <li class="sidebar-brand"><a href="#">Gastro</a>
                    </li>
                    <li><a href="#">Dashboard</a>
                    </li>
                    <li><a href="#">Recipe Book</a>
                    </li>
                {% endblock %}
            </ul>
        </div>
        <!-- End Sidebar -->


        <div id="page-content-wrapper"><!-- Page-content_wrapper -->
            <div class="content-header"><!-- Page content header -->
                <h1>
                    <a id="menu-toggle" href="#" class="btn"><i class="icon-th-list"></i></a>
                    {% block page_content_header %}
                        Simple Sidebar
                    {% endblock %}
                </h1>
            </div>
            <div class="row-fluid">
            <ol class="breadcrumb">
                <li class="active">Dashboard</li>
            </ol>
            </div>

            <div class="page-content inset"><!-- Page content -->
                <div class="row-fluid">
                    {% block page_content %}
                        <div class="span12">
                            <p class="lead">This simple sidebar template has a hint of JavaScript to make the template
                                responsive. It also includes Font Awesome icon fonts.</p>
                        </div>
                        <div class="span12">
                            <p class="well">You get the idea! Do whatever you want in the page content area!</p>
                        </div>
                    {% endblock %}
                </div>
            </div>

        </div>
        <!-- End Page-content_wrapper -->

    </div><!-- End Wrapper -->
{% endblock %}

{% block javascripts %}
    {% javascripts
    '../vendor/jquery/jquery/jquery-1.9.1.min.js'
    '../vendor/twitter/bootstrap/js/bootstrap-dropdown.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

<script type="text/javascript">
    $(document).ready(function () {
        {% block document_ready %}{% endblock %}
    });
    $("#menu-toggle").click(function (e) {
        e.preventDefault();
        $("#wrapper").toggleClass("active");
    });
</script>
</body>
</html>
