<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" media="screen">
    <link href="{{ asset('css/fontawesome.css') }}" rel="stylesheet" media="screen">
    {% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}

    {% stylesheets
    '%kernel.root_dir%/Resources/css/style.css'
        filter='cssrewrite' %}
    <link href="{{ asset_url }}" rel="stylesheet"  media="screen"/>
    {% endstylesheets %}

</head>
<body>
{% block body %}
    <div id="wrapper"><!-- Wrapper -->

        <div id="sidebar-wrapper"><!-- Sidebar -->
            <ul class="sidebar-nav">
                {% block sidebar %}
                    <li class="sidebar-brand">
                        <a href="#">Gastro</a>
                    </li>
                    <li>
                        <a href="#">Dashboard</a>
                    </li>
                    <li>
                        <a href="#">Recipe Book</a>
                    </li>
                {% endblock %}
            </ul>
        </div>
        <!-- End Sidebar -->


        <div id="page-content-wrapper"><!-- Page-content_wrapper -->
            <div class="content-header"><!-- Page content header -->
                <h1>
                    <button id="menu-toggle" href="#" class="btn"><i class="fa fa-android"></i></button>
                    {% block page_content_header %}
                        Simple Sidebar
                    {% endblock %}
                </h1>
            </div>
            <div class="row-fluid">
                <div class="col-md-12">
                    <ol class="breadcrumb">
                        <li class="active">Dashboard</li>
                    </ol>
                </div>
            </div>

            <div class="page-content"><!-- Page content -->
                <div class="row-fluid">
                    <div class="col-md-12">
                        {% include 'BraincraftedBootstrapBundle::flash.html.twig' with { 'close': true } %}
                        {% block page_content %}
                            <div class="col-md-12">
                                <p class="lead">This simple sidebar template has a hint of JavaScript to make the
                                    template
                                    responsive. It also includes Font Awesome icon fonts.</p>
                            </div>
                            <div class="col-md-12">
                                <p class="well">You get the idea! Do whatever you want in the page content area!</p>
                            </div>
                        {% endblock %}
                    </div>
                </div>
            </div>

        </div>
        <!-- End Page-content_wrapper -->

    </div><!-- End Wrapper -->
{% endblock %}

<!-- jQuery (necessary for Bootstraps JavaScript plugins) -->
<script src="{{ asset('js/jquery.js') }}"></script>
<!-- Include all JavaScripts, compiled by Assetic -->
<script src="{{ asset('js/bootstrap.js') }}"></script>

<script type="text/javascript">
    $(document).ready(function () {
        {% block document_ready %}{% endblock %}
    });
    $("#menu-toggle").click(function (e) {
        e.preventDefault();
        $("#wrapper").toggleClass("active");
    });
</script>
</body>
</html>
