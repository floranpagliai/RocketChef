{% for flashMessage in app.session.flashbag.get('success') %}
    <div id="messenger" class="messenger-success" data-message="{{ flashMessage }}" onclick="Messenger().post({
            message: this.dataset.message,
            type: 'info'
       })">afd
    </div>
{% endfor %}

{% for flashMessage in app.session.flashbag.get('info') %}
    <div id="messenger" class="messenger-info" data-message="{{ flashMessage }}">
    </div>
{% endfor %}

{% for flashMessage in app.session.flashbag.get('error') %}
    <div id="messenger" class="messenger-error" data-message="{{ flashMessage }}">
    </div>
{% endfor %}