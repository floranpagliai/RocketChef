{% extends 'RocketChefMenuBundle::layout.html.twig' %}
    {% block page_content %}
        <div class="col-lg-12">
            <div class="portlet portlet-default">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4></h4>
                    </div>
                    <div class="portlet-widgets">
                        <a href="{{ path('rocketchef_recipe_book') }}" class="btn btn-xs btn-primary">
                            <i class="fa fa-plus"></i> {{ 'recipebook.add.recipe'|trans }}</a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="defaultPortlet" class="panel-collapse in" style="height: auto;">
                    <div class="portlet-body">
                        {% if recipes  %}
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th width="25%">{{ 'recipebook.recipe.name'|trans }}</th>
                                <th width="9%" class="hidden-xs">{{ 'recipebook.recipe.cost'|trans }}</th>
                                <th width="9%">{{ 'recipebook.recipe.portioncost'|trans }}</th>
                                <th width="9%">{{  'recipebook.recipe.sellingprice'|trans }}</th>
                                <th class="no_sort btn-table" ></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for recipe in recipes %}
                                <tr>
                                    <td>
                                        {{ recipe.name|capitalize }}
                                    </td>
                                    <td class="hidden-xs">
                                        {{ recipe.cost|round(2, 'common') }}{{ 'global.currency'|trans }}
                                    </td>
                                    <td>
                                        {{ (recipe.cost/recipe.portions)|round(2, 'common') }}{{ 'global.currency'|trans }}
                                    </td>
                                    <td>
                                        {{ recipe.price }} $
                                    </td>
                                    <td class="tooltips">
                                        <a href="{{ path('rocketchef_menu_remove_recipe', {'recipeId': recipe.id}) }}"
                                           class="btn btn-sm btn-red btn-block" data-toggle="tooltip"
                                           data-placement="top" data-original-title="Remove from menu">
                                            <i class="fa fa-times"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        {% else %}
                            <div class="well text-center">
                                <p>Aucune recette au menu.</p>
                                <a href="{{ path('rocketchef_recipe_book') }}" class="btn btn-lg btn-primary">
                                    <i class="fa fa-plus"></i> {{ 'recipebook.add.recipe'|trans }}</a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

    {% endblock %}
