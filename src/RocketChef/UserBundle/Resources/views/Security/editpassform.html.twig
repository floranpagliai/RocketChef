<h4 class="page-header">Nouveau mot de passe :</h4>
{{ form_start(form, {'attr': {'class': 'form-inline'} }) }}
{% if not form.plain_password.vars.valid %}
<div class="alert alert-danger">
        {{ form_errors(form) }}
</div>
{% endif %}
{#<div class="form-group">#}
    {#<label class="sr-only" for="password">Password</label>#}
    {#{{ form_widget(form.oldPassword, { 'attr': { 'placeholder': 'user.form.password_old'|trans } } ) }}#}
{#</div>#}
<div class="form-group">
    <label class="sr-only" for="password">Password</label>
    {{ form_widget(form.plain_password.first, { 'attr': { 'placeholder': 'user.form.password'|trans } } ) }}
</div>
<div class="form-group">
    <label class="sr-only" for="password">Password</label>
    {{ form_widget(form.plain_password.second, { 'attr': { 'placeholder': 'user.form.password_validation'|trans } } ) }}
</div>
<input class="btn btn-sm btn-blue" type="submit" id="_submit" name="_submit"
       value="{{ 'user.action.save'|trans }}"/>
{{ form_end(form) }}
