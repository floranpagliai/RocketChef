{% extends 'RocketChefUserBundle::layoutoffline.html.twig' %}
{% block title %}{{ 'global.appname'|trans }} - {{ 'user.title.register'|trans }}{% endblock %}
{% block page_content_login %}
    <div class="portlet-heading login-heading">
        <div class="portlet-title">
            <h4><strong>{% block login_title %}{{ 'user.title.register'|trans }}{% endblock %}</strong>
            </h4>
        </div>
        <div class="portlet-widgets">
            <a href="{{ path('rocketchef_user_login') }}">
                <button class="btn btn-white btn-xs"><i
                            class="fa fa-lock"></i> {{ 'user.title.login'|trans }}</button>
            </a>
        </div>
        <div class="clearfix"></div>
    </div>
    <div class="portlet-body">
        {{ form_start(form) }}
        {% if errors  is defined %}
            {% for error in errors %}
                <div class="alert alert-danger"><i class="fa fa-warning"></i> {{ error.message|trans }}</div>
            {% endfor %}
        {% endif %}
        <fieldset>
            <div class="form-group">
                <label class="sr-only" for="email">Email address</label>
                {{ form_widget(form.email, { 'attr': { 'placeholder': 'user.form.email'|trans } } ) }}
            </div>
            <div class="form-group">
                <label class="sr-only" for="firstname">Firstname</label>
                {{ form_widget(form.username, { 'attr': { 'placeholder': 'user.form.firstname'|trans } } ) }}
            </div>
            <div class="form-group">
                <label class="sr-only" for="lastname">Lastname</label>
                {{ form_widget(form.lastname, { 'attr': { 'placeholder': 'user.form.lastname'|trans } } ) }}
            </div>
            <div class="form-group">
                <label class="sr-only" for="password">Password</label>
                {{ form_widget(form.password.first, { 'attr': { 'placeholder': 'user.form.password'|trans } } ) }}
            </div>
            <div class="form-group">
                <label class="sr-only" for="password">Password</label>
                {{ form_widget(form.password.second, { 'attr': { 'placeholder': 'user.form.password_validation'|trans } } ) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.restaurant.name, { 'attr': { 'placeholder': 'user.form.restaurant_name'|trans } } ) }}
            </div>
            <br>
            <input class="btn btn-lg btn-blue btn-block" type="submit" id="_submit" name="_submit"
                   value="{{ 'user.action.register'|trans }}"/>
        </fieldset>
        <br>

        {{ form_end(form) }}
    </div>
{% endblock page_content_login %}
