{% extends 'RocketChefDashboardBundle::layout.html.twig' %}
{% block page_content %}
    <div class="row-fluid">
        <div class="col-lg-12">
            <div class="portlet portlet-default">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>Ventes</h4>
                    </div>
                    <div class="portlet-widgets">
                        <a data-toggle="collapse" data-parent="#accordion" href="#sellingChart"><i
                                    class="fa-chevron-down fa"></i></a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="panel-collapse collapse in" id="sellingChart">
                    <div class="portlet-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div id="chart" data-target="{{ path('rocketchef_selling_ajax') }}"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}