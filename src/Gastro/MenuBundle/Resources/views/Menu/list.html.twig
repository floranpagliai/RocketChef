{% extends 'GastroMenuBundle::layout.html.twig' %}
    {% block page_content %}
        <div class="col-lg-12">
            <div class="portlet portlet-default">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4></h4>
                    </div>
                    <div class="portlet-widgets">
                        <a href="{{ path('gastro_recipe_book') }}" class="btn btn-xs btn-primary">
                            <i class="fa fa-plus"></i> Add Recipe</a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="defaultPortlet" class="panel-collapse in" style="height: auto;">
                    <div class="portlet-body">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Selling price</th>
                                <th class="no_sort" width="8%"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for recipe in recipes %}
                                <tr>
                                    <td>
                                        <a href="{{ path('gastro_recipe_book_show', {'recipeId' : recipe.id, 'recipeName' : recipe.name}) }}">{{ recipe.name|capitalize }}</a>
                                    </td>
                                    <td>
                                        {{ recipe.price }} $
                                    </td>
                                    <td class="tooltip-content">
                                        <a href="{{ path('gastro_menu_remove_recipe', {'recipeId': recipe.id}) }}"
                                           class="btn btn-sm btn-red btn-block" data-toggle="tooltip"
                                           data-placement="top" data-original-title="Remove from menu">
                                            <i class="fa fa-times"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    {% endblock %}
