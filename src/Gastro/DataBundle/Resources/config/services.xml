<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="gastro_data.recipe.repository.class">Gastro\DataBundle\Entity\RecipeRepository</parameter>
        <parameter key="gastro_data.recipe.provider.class">Gastro\DataBundle\Service\RecipeProvider</parameter>
    </parameters>

    <services>
        <service id="gastro_data.recipe.repository"
                 class="%gastro_data.recipe.repository.class%"
                 factory-service="doctrine.orm.entity_manager"
                 factory-method="getRepository">
            <argument>GastroDataBundle:Recipe</argument>
        </service>

        <service id="gastro_data.recipe.provider"
                 class="%gastro_data.recipe.provider.class%">
            <argument type="service" id="gastro_data.recipe.repository" />
            <argument type="service" id="gastro_data.recipe.repository" />
        </service>
    </services>
</container>
