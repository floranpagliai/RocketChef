{% extends 'GastroRecipeBookBundle::layout.html.twig' %}
    {% block page_content %}
        <table class="table table-hover">
            <thead>
            <tr>
                <td>Recette</td>
            </tr>
            </thead>
            <tbody>
            {% for recipe in recipes %}
                <tr>
                    <td>
                        <a href="{{ path('gastro_recipe_book_show', {'recipeId' : recipe.id, recipeName : recipe.name}) }}">{{ recipe.name }}</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endblock %}
