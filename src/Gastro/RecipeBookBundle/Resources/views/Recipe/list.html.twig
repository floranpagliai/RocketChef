{% extends 'GastroRecipeBookBundle::layout.html.twig' %}
    {% block page_content %}
        <div class="col-lg-12">
            <div class="portlet portlet-default">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4></h4>
                    </div>
                    <div class="portlet-widgets">
                        <a href="{{ path('gastro_recipe_book_add') }}" class="btn btn-xs btn-primary">
                            <i class="fa fa-plus"></i> Add Recipe</a>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="defaultPortlet" class="panel-collapse in" style="height: auto;">
                    <div class="portlet-body">
                        <table id="dataTable" class="table table-hover">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Portion Cost</th>
                                <th class="no_sort" width="8%"></th>
                                <th class="no_sort" width="8%"></th>
                                <th class="no_sort" width="8%"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for recipe in recipes %}
                                <tr>
                                    <td>
                                        <a href="{{ path('gastro_recipe_book_show', {'recipeId' : recipe.id, 'recipeName' : recipe.name}) }}">{{ recipe.name|capitalize }}</a>
                                    </td>
                                    <td>
                                        {{ (recipe.cost/recipe.portions)|round(2, 'common') }} $
                                    </td>
                                    {% if recipe.isInMenu %}
                                        <td class="tooltip-content">
                                            <a href="{{ path('gastro_recipe_book_add_menu', {'recipeId': recipe.id}) }}" class="btn btn-sm btn-green btn-block" data-toggle="tooltip"
                                               data-placement="top" data-original-title="Remove from menu">
                                                <i class="fa fa-check"></i>
                                            </a>
                                        </td>
                                    {% else %}
                                        <td class="tooltip-content">
                                            <a href="{{ path('gastro_recipe_book_add_menu', {'recipeId': recipe.id}) }}" class="btn btn-sm btn-primary btn-block" data-toggle="tooltip"
                                               data-placement="top" data-original-title="Add to menu">
                                                <i class="fa fa-plus"></i>
                                            </a>
                                        </td>
                                    {% endif %}
                                    <td class="tooltip-content">
                                        <a href="{{ path('gastro_recipe_book_edit', {'recipeId': recipe.id, 'recipeName': recipe.name}) }}"
                                           class="btn btn-sm btn-primary btn-block" data-toggle="tooltip"
                                           data-placement="top" data-original-title="Edit recipe">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                    </td>
                                    <td class="tooltip-content">
                                        <a href="{{ path('gastro_recipe_book_delete', {'recipeId': recipe.id}) }}"
                                           class="btn btn-sm btn-red btn-block" data-toggle="tooltip"
                                           data-placement="top" data-original-title="Delete recipe">
                                            <i class="fa fa-times"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    {% endblock %}
