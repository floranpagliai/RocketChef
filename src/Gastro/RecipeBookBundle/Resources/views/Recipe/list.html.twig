{% extends 'GastroRecipeBookBundle::layout.html.twig' %}
    {% block page_content %}
        <div class="col-md-12">
            <table class="table table-hover">
                <tbody>
                {% for recipe in recipes %}
                    <tr>
                        <td>
                            <a href="{{ path('gastro_recipe_book_show', {'recipeId' : recipe.id, recipeName : recipe.name}) }}">{{ recipe.name|capitalize }}</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <button class="btn btn-default pull-right">
                <i class="fa fa-plus"></i> Add Recipe
            </button>
        </div>
    {% endblock %}
