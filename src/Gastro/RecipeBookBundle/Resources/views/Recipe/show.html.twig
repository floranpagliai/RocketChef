{% extends 'GastroRecipeBookBundle::layout.html.twig' %}

{% block page_content_header %}
    {{ 'recipebook.title'|trans }}
    <small>{{ 'recipebook.recipe'|trans }}</small>
{% endblock %}

{% block page_content_breadcrumb %}
    <li><a href="{{ path('gastro_dashboard') }}"><i class="fa fa-tachometer "></i> {{ 'dashboard.title'|trans }}</a>
    </li>
    <li><a href="{{ path('gastro_recipe_book') }}"><i class="fa fa-book "></i> {{ 'recipebook.title'|trans }}</a>
    </li></a>
    <li class="active"><i class="fa fa-cutlery"></i> {{ recipe.name|capitalize }}</li></a>
{% endblock %}

{% block page_content %}
    <div class="row-fluid">
        <div class="col-lg-10">
            <div class="portlet portlet-default">
                <div class="portlet-heading">
                    <div class="portlet-title">
                        <h4>{{ recipe.name|capitalize }}</h4>
                    </div>
                    <div class="portlet-widgets">
                        <button type="button" class="btn btn-xs btn-white dropdown-toggle" data-toggle="dropdown">
                            Actions
                            <span class="caret"/>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li>
                                <a href="{{ path('gastro_recipe_book_edit', {'recipeId': recipe.id, 'recipeName': recipe.name}) }}"
                                <i class="fa fa-plus"></i> Add to menu</a>
                            </li>
                            <li>
                                <a href="{{ path('gastro_recipe_book_edit', {'recipeId': recipe.id, 'recipeName': recipe.name}) }}"
                                <i class="fa fa-pencil"></i> Edit Recipe</a>
                            </li>
                            <li>
                                <a href="{{ path('gastro_recipe_book_delete', {'recipeId': recipe.id}) }}"
                                <i class="fa fa-times"></i> Delete Recipe</a>
                            </li>
                        </ul>

                    </div>
                    <div class="clearfix"></div>
                </div>
                <div id="defaultPortlet" class="panel-collapse in" style="height: auto;">
                    <div class="portlet-body">
                        <div class="row">
                            <div class="col-lg-4 col-md-6">
                                {#<img class="img-rounded img-responsive" src="{{ asset(recipe.image) }}">#}
                            </div>
                            <div class="col-lg-8 col-md-6">
                                <table class="table table-bordered table-recipe-infos">
                                    <tr>

                                        <td>
                                            <strong>HT cost for {{ recipe.portions }} portion(s)</strong><br>
                                            {{ recipe.cost|round(2, 'common') }}{{ 'global.currency'|trans }}
                                        </td>
                                        <td>
                                            <strong>TTC minimal price</strong><br>


                                        </td>
                                        <td>
                                            <strong>HT r√©el price</strong><br>
                                            {{ recipe.price }}{{ 'global.currency'|trans }}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <strong>HT cost per portion</strong><br>
                                            {{ (recipe.cost/recipe.portions)|round(2, 'common') }}{{ 'global.currency'|trans }}
                                        </td>
                                        <td>
                                            <strong>HT minimal price</strong><br>
                                            {{ ((recipe.cost/recipe.portions)*3)|round(2, 'common') }}{{ 'global.currency'|trans }}

                                        </td>
                                        <td>
                                            <strong>Ratio</strong><br>
                                            {% if  recipe.cost != 0 %}
                                                {{ (recipe.price/(recipe.cost/recipe.portions))|round(1, 'common') }}
                                            {% endif %}
                                        </td>
                                    </tr>
                                </table>
                                <br>
                                <br>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-2">
            <div class="tile {% if margin > 40 %}green {% else %}red{% endif %} text-center">
                <h4 class="text-center"><i class="fa fa-circle-o-notch fa-fw"></i> {{ 'term.rate.margin'|trans }}</h4>

                <div id="easy-pie-1" class="easy-pie-chart" data-percent="{{ margin }}">
                    <span class="percent"></span>
                </div>
            </div>
        </div>

    </div>

    <div class="col-lg-12">
        <div class="portlet portlet-default">
            <div class="portlet-heading">
                <div class="portlet-title">
                    <h4>Ingredients</h4>
                </div>
                <div class="portlet-widgets">
                    {#<a href="{{ path('gastro_recipe_book_edit', {'recipeId': recipe.id, 'recipeName': recipe.name}) }}" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i> Edit Recipe</a>#}
                </div>
                <div class="clearfix"></div>
            </div>
            <div id="defaultPortlet" class="panel-collapse in" style="height: auto;">
                <div class="portlet-body">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Cost</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for recipeIngredient in recipeIngredients %}
                            <tr>
                                <td>
                                    {{ recipeIngredient.ingredient.name }}
                                </td>
                                <td>
                                    {{ recipeIngredient.qte }}
                                    {% if recipeIngredient.unit == constant('Gastro\\DataBundle\\Entity\\RecipeIngredient::UNIT_GR') %}
                                        Gr
                                    {% elseif recipeIngredient.unit == constant('Gastro\\DataBundle\\Entity\\RecipeIngredient::UNIT_KG') %}
                                        Kg
                                    {% elseif recipeIngredient.unit == constant('Gastro\\DataBundle\\Entity\\RecipeIngredient::UNIT_LITER') %}
                                        L
                                    {% elseif recipeIngredient.unit == constant('Gastro\\DataBundle\\Entity\\RecipeIngredient::UNIT_CLITER') %}
                                        Cl
                                    {% else %}

                                    {% endif %}
                                </td>
                                <td>
                                    {{ recipeIngredient.ingredient.priceForUnit }}
                                    {% if recipeIngredient.ingredient.unit == constant('Gastro\\DataBundle\\Entity\\Ingredient::UNIT_UNITARY') %}
                                        {{ 'global.currency'|trans }}/Pce
                                    {% elseif recipeIngredient.ingredient.unit == constant('Gastro\\DataBundle\\Entity\\Ingredient::UNIT_KG') %}
                                        {{ 'global.currency'|trans }}/Kg
                                    {% elseif recipeIngredient.ingredient.unit == constant('Gastro\\DataBundle\\Entity\\Ingredient::UNIT_Liter') %}
                                        {{ 'global.currency'|trans }}/L
                                    {% endif %}
                                </td>
                                <td>
                                    {{ recipeIngredient.cost }}{{ 'global.currency'|trans }}
                                </td>
                            </tr>

                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


